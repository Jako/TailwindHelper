{
  "name": "TailwindHelper",
  "lowCaseName": "tailwindhelper",
  "description": "MODX Helper for Tailwind",
  "author": "Thomas Jakobi",
  "version": "1.0.2",
  "package": {
    "menus": [
      {
        "text": "tailwindhelper.menu",
        "description": "tailwindhelper.menu_desc",
        "action": "",
        "handler": "TailwindHelper.util.scanClasses(); return false;",
        "parent": "components"
      }
    ],
    "elements": {
      "snippets": [
        {
          "name": "TailwindScanClasses",
          "file": "tailwindscanclasses.snippet.php",
          "description": "Scan MODX elements for Tailwind classes"
        }
      ],
      "plugins": [
        {
          "name": "TailwindHelper",
          "file": "tailwindhelper.plugin.php",
          "events": [
            "OnManagerPageBeforeRender"
          ]
        }
      ]
    },
    "systemSettings": [
      {
        "key": "debug",
        "type": "combo-boolean",
        "area": "system",
        "value": "0"
      },
      {
        "key": "safelistFolder",
        "area": "site",
        "value": "{core_path}components/tailwindhelper/elements/purge/"
      }
    ]
  },
  "dependencies": [
    {
      "name": "php",
      "version": ">=7.2"
    },
    {
      "name": "modx",
      "version": ">=2.6"
    }
  ],
  "build": {
    "readme": "docs/readme.md",
    "license": "docs/license.md",
    "changelog": "docs/changelog.md",
    "options": {
      "modx_version": "2.8"
    },
    "setupOptions": {
      "source": "setup.options.php"
    },
    "resolver": {
      "after": [
        "resolve.treehillstudio.php"
      ]
    }
  }
}
